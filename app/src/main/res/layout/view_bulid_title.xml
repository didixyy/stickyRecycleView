<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y75"
    android:background="@color/white_clolor"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:id="@+id/left_line"
            android:layout_centerVertical="true"
            android:background="@color/line_color"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y3"/>
    <TextView
        android:layout_marginLeft="@dimen/outside"
        android:layout_toRightOf="@id/left_line"
        android:layout_gravity="center"
        android:id="@+id/title_textview"
        android:textSize="@dimen/font38px"
        android:gravity="center"
        android:text="1栋1层"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
        <View
            android:layout_toRightOf="@id/title_textview"
            android:id="@+id/right_line"
            android:layout_marginLeft="@dimen/outside"
            android:layout_centerVertical="true"
            android:background="@color/line_color"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y3"/>
    </RelativeLayout>

</LinearLayout>